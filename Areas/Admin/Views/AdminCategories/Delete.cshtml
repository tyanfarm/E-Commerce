@model E_Commerce.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
} 

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Categories List</a>
            <span class="breadcrumb-item active">Delete Confirm</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Delete Confirm</h2>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID: </td>
                        <td class="text-dart font-weight-semibold">@Model.CatId</td>
                    </tr>
                    <tr>
                        <td>Role Name: </td>
                        <td class="text-dart font-weight-semibold">@Model.CatName</td>
                    </tr>
                    <tr>
                        <td>Ordering: </td>
                        <td class="text-dart font-weight-semibold">@Model.Ordering</td>
                    </tr>
                    <tr>
                        <td>Published: </td>
                        <td class="text-dart font-weight-semibold">@Model.Published</td>
                    </tr>
                    <tr>
                        <td>Delete Confirm: </td>
                        <td>
                            @* không có asp-area và asp-controller thì sẽ tự hiểu là cùng Controller và Area *@
                            <form asp-action="Delete" asp-route-id="@Model.CatId">
                                <input type="hidden" asp-for="CatId">
                                <input type="submit" value="Delete Confirm" class="btn btn-danger">
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
