@model List<E_Commerce.Models.Orderdetail>

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<main class="main-content">
    <div style="padding-top:80px;">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Order Details</h2>
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>
                                <a asp-controller="UserAccount" asp-action="Dashboard">Dashboard<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Order Details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="checkout-area section-space-y-axis-100">
        <div class="container">
            <form asp-controller="Checkout" asp-action="Index" method="post">
                <div class="row">
                    <div class="col-lg-12 col-12">
                        <div class="checkbox-form">
                            @if (Model != null && Model.Count() > 0) {
                                @foreach (var item in Model) {
                                    <hr/>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="checkout-form-list">
                                                <label>ID: #@item.OrderDetailId</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="checkout-form-list">
                                                <label>Product Name: @item.Product.ProductName</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="checkout-form-list">
                                                <label>Quantity: @item.Quantity</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="checkout-form-list">
                                                <label>Total Money: @item.Total</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="checkout-form-list">
                                                <label>Ship Date: @item.ShipDate</label>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>