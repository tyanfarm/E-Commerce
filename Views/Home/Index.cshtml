        <!-- Begin Product Area -->
        <div class="product-area section-space-top-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="nav product-tab-nav pb-10" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="active" id="all-items-tab" data-bs-toggle="tab" href="#all-items" role="tab" aria-controls="all-items" aria-selected="true">
                                    <div class="product-tab-icon">
                                        <img src="~/assets/images/product/icon/1.png" alt="Product Icon">
                                    </div>
                                    All Items
                                </a>
                            </li>
                            @foreach (var item in Model.Products) {
                                <li class="nav-item" role="presentation">
                                    <a id="fresh-fruits-tab" data-bs-toggle="tab" href="#@item.category.CatId" role="tab" aria-controls="fresh-fruits" aria-selected="false">
                                        <div class="product-tab-icon">
                                            <img src="~/assets/images/product/icon/5.png" alt="@item.category.Title">
                                        </div>
                                        @item.category.CatName
                                    </a>
                                </li>
                            }
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="all-items" role="tabpanel" aria-labelledby="all-items-tab">
                                @await Html.PartialAsync("_ListProductPartialView", allProducts)
                            </div>
                            @foreach (var item in Model.Products) {
                                <div class="tab-pane fade" id="@item.category.CatId" role="tabpanel" aria-labelledby="fresh-fruits-tab">
                                    @await Html.PartialAsync("_ListProductPartialView", item.listProducts)
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
